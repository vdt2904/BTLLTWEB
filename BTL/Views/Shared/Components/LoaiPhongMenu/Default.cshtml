<script>
    function showAllRoomByCatagory(getUrl) {
        var str = ''
        $.ajax({
            type: 'GET',
            url: getUrl,
            dataType: 'json',
            success: function (data) {
                $.each(data, function (key, val) {
                    var linkImg = "../images/" + ${val.anh};
                    str += '<div class="col-md-4" >';
                    str += '<div class="hotel-content" >';
                    str += '<div class="hotel-grid" style = "background-image: url(';
                    str += linkImg;
           
                    str += ');" >';
                    str += '<div class="price" > <small>For as low as </small > <span>
                    str += $.trim(val.gia)
                    str += '</span></div>';
                    str += ' <a class="book-now text-center" href = "#" > <i class="ti-calendar" > </i> Book Now</a>';
                    str += '</div>';
                    str += '<div class="desc" >';
                    str += '<h3><a href="#" > </a>';
                    str += $.trim(val.tenPhong)
                
            
                    str += ' </h3 >';
                    str += '<h4><a href="#" > </a>';
                    str += $.trim(val.loaiPhong1)
                  
                    str += '</h4>';
                    str += '<p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>';
                    str += '</div></div></div>';
                                        
                                       
                                    
                    //str += '<p>' + val.tenPhong + '</p>'
                });
                $('#displayRoom').html(str);
            },
            Error: function (xhr) {
                alert(xhr.responseText);
            }
        });
    }
</script>