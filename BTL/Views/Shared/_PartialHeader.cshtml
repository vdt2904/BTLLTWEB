@using Microsoft.AspNetCore.Http
<div id="fh5co-header">
    <header id="fh5co-header-section">
        <div class="container">
            <div class="nav-header">
                <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
                <h1 id="fh5co-logo"><a href="index.html">Luxe</a></h1>
                <nav id="fh5co-menu-wrap" role="navigation">
                    <ul class="sf-menu" id="fh5co-primary-menu">
                        <li><a class="active" asp-action="Index">Home</a></li>
                        <li>
                            <a asp-action="Room" class="fh5co-sub-ddown">Room</a>
                            <ul class="fh5co-sub-menu">
                                @await Component.InvokeAsync("LoaiPhongMenu")
                            </ul>
                        </li>
                        <li><a asp-action="Service">Services</a></li>
                        <li><a asp-action="Blog">Blog</a></li>
                        <li><a asp-action="Contact">Contact</a></li>
                        <li>
                            @if (TempData["name"] != null)
                            {
                                <a class="fh5co-sub-ddown">
                                    Xin chào, @TempData["name"]
                                </a>
                                <ul class="fh5co-sub-menu">
                                    <li><a asp-action="ThongTinCaNhan" asp-controller="KhachHang">Thông tin cá nhân</a></li>
                                    <li><a asp-action="DangXuat" asp-controller="Access">Logout</a></li>
                                </ul>
                            }
                            else
                            {
                                <a asp-action="DangNhap" asp-controller="Access">Login</a>
                            }
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

</div>