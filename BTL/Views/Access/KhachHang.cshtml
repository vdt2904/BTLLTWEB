    <style>
        /* Thiết lập CSS để trang web có giao diện đẹp */
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
        }

        h1, h2 {
            text-align: center;
        }
        .button {
            margin:0 auto;
    background-color: #4CAF50;
    color: white;
