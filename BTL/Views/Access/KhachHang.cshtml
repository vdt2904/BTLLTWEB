	    <thead >
            <tr><h2>Thông tin khách hàng</h2></tr>
        </thead>
	    <tr>
                <th><label asp-for="TenKh" class="form-control"></label></th>
                <th><input asp-for="TenKh" class="form-control" /></th>
                <span asp-validation-for="TenKh" class="text-danger"></span>
	    </tr>
	 
	  <tbody>
	    <tr>
                <td>  <label asp-for="GioiTinh" class="control-label"></label></td>
                <td> <input asp-for="GioiTinh" class="form-control" /></td>
                <span asp-validation-for="GioiTinh" class="text-danger"></span>
	    </tr>
	    <tr>
	      <td><label asp-for="Cccd" class="control-label"></label>
              <td>  <input asp-for="Cccd" class="form-control" /></td>
                <span asp-validation-for="Cccd" class="text-danger"></span>
	     
	    </tr>
	    <tr>
                <td>
                    <label asp-for="NgaySinh" class="control-label"></label></td>
                 <td>   <input asp-for="NgaySinh" class="form-control" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </td>
	      
	    </tr>
        <tr>
                <td>
                    <label asp-for="DiaChi" class="control-label"></label></td>
                   <td> <input asp-for="DiaChi" class="form-control"/>
                   <span asp-validation-for="DiaChi" class="text-danger"></span>
                </td>
	      
	    </tr>
            <tr>
                <td>
                    <label asp-for="LoaiKhachHang" class="control-label"></label></td>
                  <td>  
                      <input asp-for="LoaiKhachHang" class="form-control" />
                    <span asp-validation-for="LoaiKhachHang" class="text-danger"></span>
                </td>

            </tr>
	  </tbody>
	</table>
    <input class="button" type="submit" value="Save" class="text-primary" />
    </form>
